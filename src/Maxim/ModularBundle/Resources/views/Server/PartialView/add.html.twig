{{ form_start(serverForm) }}
    {{ form_errors(serverForm) }}

    <fieldset>
        <div class="form-group">
            {{ form_row(serverForm.name) }}
        </div>

        <div class="form-group">
            {{ form_row(serverForm.hub) }}
        </div>

        <div id="ou-server-nohub">
            <div class="form-group left" style="width:75%;">
                {{ form_row(serverForm.ip) }}
            </div>

            <div class="form-group right" style="padding-left:5px;width:25%;box-sizing: border-box;margin-top:0;">
                {{ form_row(serverForm.port) }}
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn">Add server</button>
        </div>
    </fieldset>

{{ form_end(serverForm) }}
